<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">
    
    <class name="Adrotec\Common\PaymentBundle\Entity\CardPayment">
        <property name="cardNo">
            <constraint name="NotBlank" />
        </property>
    </class>
    
    <class name="Adrotec\Common\PaymentBundle\Entity\VoucherPayment">
        <property name="number">
            <constraint name="NotBlank" />
        </property>
        <property name="code">
            <constraint name="NotBlank" />
        </property>
    </class>
    
    <class name="Adrotec\Common\PaymentBundle\Entity\SlipPayment">
        <property name="slipNo">
            <constraint name="NotBlank" />
        </property>
        <property name="bank">
            <constraint name="NotBlank" />
        </property>
    </class>
    
    <class name="Adrotec\Common\PaymentBundle\Entity\ChequePayment">
        <property name="chequeNo">
            <constraint name="NotBlank" />
        </property>
        <property name="bank">
            <constraint name="NotBlank" />
        </property>
        <property name="chequeDate">
            <constraint name="NotBlank" />
        </property>
    </class>
    
</constraint-mapping>