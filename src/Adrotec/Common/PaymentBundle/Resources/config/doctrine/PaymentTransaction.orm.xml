<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Adrotec\Common\PaymentBundle\Entity\PaymentTransaction" table="_pmt_payment_transactions">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <one-to-many field="cardPayments" target-entity="CardPayment" mapped-by="paymentTransaction"/>
    <one-to-many field="slipPayments" target-entity="SlipPayment" mapped-by="paymentTransaction"/>
    <one-to-many field="chequePayments" target-entity="ChequePayment" mapped-by="paymentTransaction"/>
    <one-to-many field="voucherPayments" target-entity="VoucherPayment" mapped-by="paymentTransaction"/>
    <one-to-many field="cashPayments" target-entity="CashPayment" mapped-by="paymentTransaction"/>
    <one-to-many field="payments" target-entity="Payment" mapped-by="paymentTransaction"/>
  </entity>
</doctrine-mapping>
