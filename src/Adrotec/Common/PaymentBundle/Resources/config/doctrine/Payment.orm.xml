<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Adrotec\Common\PaymentBundle\Entity\Payment" table="_pmt_payments" inheritance-type="SINGLE_TABLE">
        <discriminator-column name="type" type="string" />
        <discriminator-map>
            <discriminator-mapping value="cash" class="CashPayment"/> 
            <discriminator-mapping value="voucher" class="VoucherPayment"/> 
            <discriminator-mapping value="cheque" class="ChequePayment"/> 
            <discriminator-mapping value="slip" class="SlipPayment"/> 
            <discriminator-mapping value="card" class="CardPayment"/> 
        </discriminator-map>
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="date" type="date" column="date"/>
        <field name="amount" type="float" column="amount"/>
        <field name="amountDefaultCurrency" type="float" column="amount_default_currency"/>
        <field name="description" type="text" column="description" nullable="true"/>
        <many-to-one field="currency" target-entity="Adrotec\Common\CoreBundle\Entity\Currency">
            <join-columns>
                <join-column name="currency_id" referenced-column-name="id"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="cachier" target-entity="Adrotec\Common\UserBundle\Entity\User">
            <join-columns>
                <join-column name="cachier_id" referenced-column-name="id"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="paymentTransaction" target-entity="Adrotec\Common\PaymentBundle\Entity\PaymentTransaction">
            <join-column name="payment_transaction_id" />
        </many-to-one>
        
    </entity>
</doctrine-mapping>
