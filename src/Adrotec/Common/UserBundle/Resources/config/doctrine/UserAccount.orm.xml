<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Adrotec\Common\UserBundle\Entity\UserAccount" table="_usr_user_accounts" repository-class="Adrotec\Common\UserBundle\Entity\UserRepository">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        
    <!-- ASSOCIATIONS -->
    
        <one-to-many field="userGroups" target-entity="UserGroup" mapped-by="userAccount">
            
        </one-to-many>
    
        <one-to-many field="userRoles" target-entity="UserRole" mapped-by="userAccount">
            
        </one-to-many>
    </entity>
</doctrine-mapping>
