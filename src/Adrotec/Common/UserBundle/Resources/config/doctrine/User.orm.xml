<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Adrotec\Common\UserBundle\Entity\User" table="_usr_users">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <many-to-one field="profile" target-entity="Adrotec\Common\UserBundle\Entity\Profile">
      <join-columns>
        <join-column name="profile_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="contact" target-entity="Adrotec\Common\ContactBundle\Entity\Contact">
      <join-columns>
        <join-column name="contact_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>

    <one-to-many field="userGroups" target-entity="UserGroup" mapped-by="userAccount">

    </one-to-many>

    <one-to-many field="userRoles" target-entity="UserRole" mapped-by="userAccount">

    </one-to-many>

  </entity>
</doctrine-mapping>