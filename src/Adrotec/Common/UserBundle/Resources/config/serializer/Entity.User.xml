<?xml version="1.0" encoding="UTF-8" ?>
<serializer>
    <class name="Adrotec\Common\UserBundle\Entity\User" exclusion-policy="ALL">
        <xml-namespace prefix="atom" uri="http://www.w3.org/2005/Atom"/>
        <property name="id" expose="true"></property>
        <property name="firstName" expose="true"></property>
        <property name="lastName" expose="true"></property>
        <property name="name" expose="true"></property>
        <property name="picture" expose="true"></property>
        <property name="userGroups" expose="true"></property>
        <property name="userRoles" expose="true"></property>
        <property name="groups" expose="true"></property>
        <property name="roles" expose="true"></property>
        <property name="credentials" expose="true" access_type="public_method"></property>
    </class>
</serializer>